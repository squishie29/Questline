 {% extends 'base.html.twig' %}

{% block title %}Guide{% endblock %}

{% block body %}

    <h1>Guides disponibles</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th><h7>Id</h7></th>
                <th>Voyage</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Num_tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guide in guides %}
            <tr>
                <td>{{ guide.id }}</td>
                <td>{{ guide.voyage.Destination}}</td>
                <td>{{ guide.nom }}</td>
                <td>{{ guide.prenom }}</td>
                <td>{{ guide.email }}</td>
                <td>{{ guide.numTel }}</td>
                <td>
                    <a href="{{ path('guide_show', {'id': guide.id}) }}">show</a>
                    <a href="{{ path('guide_edit', {'id': guide.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('guide_new') }}"><button type="submit" class="btn btn-primary mt-3" class="btn" class="btn">Create new</button></a>
{% endblock %}
