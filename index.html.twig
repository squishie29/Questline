                <td>{{ vol.prix }}</td>
                <td>{{ vol.nbplace }}</td>
                <td>
                    <a type="button"class="btn btn-dark btn-sm" href="{{ path('vol_show', {'id': vol.id}) }}">show</a>
                    <a type="button"class="btn btn-dark btn-sm" href="{{ path('vol_edit', {'id': vol.id}) }}">edit</a>

                </td>
            </tr>
