{% extends 'base.html.twig' %}

{% block title %}Vol index{% endblock %}

{% block body %}
    

    <center><table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Prix</th>
                <th>Nbplace</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
