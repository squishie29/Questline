{% extends 'base.html.twig' %}

{% block title %}Guide{% endblock %}

{% block body %}
    <center>
    <h1>Guides disponibles</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th><h6>Id</h6></th>
                <th><h6>Voyage</h6></th>
                <th><h6>Nom</h6></th>
                <th><h6>Prenom</h6></th>
                <th><h6>Email</h6></th>
                <th><h6>Num_tel</h6></th>
            </tr>
        </thead>
        <tbody>
        {% for guide in guides %}
            <tr>
                <td>{{ guide.id }}</td>
                <td>{{ guide.voyage.Destination}}</td>
                <td>{{ guide.nom }}</td>
                <td>{{ guide.prenom }}</td>
                <td>{{ guide.email }}</td>
                <td>{{ guide.numTel }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </center>
{% endblock %}
